<h1>Login</h1>

<div class="container">
	<%= form_tag '/login' do %>

		<div class="form-group">
	  	Email: <%= text_field_tag :email %>
	  </div>
		<div class="form-group">
	  	Password: <%= password_field_tag :password %>
	  </div>
	  <%= submit_tag "Submit", class:"btn btn-default" %>
	<% end %>
</div>